{
  "author": "Jaco Greeff <jacogr@gmail.com>",
  "bugs": "https://github.com/polkadot-js/api/issues",
  "homepage": "https://github.com/polkadot-js/api#readme",
  "license": "Apache-2.0",
  "packageManager": "yarn@3.2.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/polkadot-js/api.git"
  },
  "sideEffects": false,
  "type": "commonjs",
  "version": "8.11.4-9-x",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:interfaces && polkadot-dev-build-ts",
    "build:extra": "(cd packages/typegen && copyfiles scripts/* build)",
    "build:interfaces": "polkadot-types-internal-interfaces",
    "build:release": "polkadot-ci-ghact-build",
    "build:rollup": "polkadot-exec-rollup --config",
    "chain:info": "polkadot-types-chain-info",
    "clean": "polkadot-dev-clean-build",
    "deno": "yarn build && yarn deno:setup && yarn deno:check",
    "deno:check": "deno check --import-map=deno/import_map.json deno/check.ts",
    "deno:setup": "deno run --import-map=deno/import_map.json --allow-read --allow-write deno/setup.ts",
    "lint": "polkadot-dev-run-lint",
    "postinstall": "polkadot-dev-yarn-only",
    "test": "NODE_OPTIONS=--experimental-vm-modules polkadot-dev-run-test --coverage --forceExit --runInBand --testPathIgnorePatterns e2e",
    "test:one": "polkadot-dev-run-test --detectOpenHandles --forceExit",
    "test:watch": "polkadot-dev-run-test --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/register": "^7.18.6",
    "@babel/runtime": "^7.18.6",
    "@polkadot/dev": "^0.67.55",
    "@polkadot/typegen": "workspace:packages/typegen",
    "@types/jest": "^28.1.4",
    "copyfiles": "^2.4.1"
  },
  "resolutions": {
    "typescript": "^4.7.4"
  }
}
