{
  "version": "0.30.28",
  "private": true,
  "engines": {
    "node": "^10.1.0",
    "yarn": "^1.3.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0",
    "typescript": "^3.0.1"
  },
  "scripts": {
    "build": "polkadot-dev-build-ts && polkadot-dev-build-docs",
