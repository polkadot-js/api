declare module '@polkadot/api/types/errors' {
  export interface AugmentedErrors<ApiType> {
    {{#each modules}}
    {{{name}}}: {
      {{#unless @root.isStrict}}
      // TODO This would be great as template literal [key as `is${Capitalize<string>}`]
      [key: string]: AugmentedIsError<ApiType>;
      {{/unless}}
      {{~#each items}}
      {{> docs}}
      {{{isA}}}: AugmentedIsError<ApiType>;
      {{/each}}
    };
    {{/each}}
  }

  export interface QueryableErrors<ApiType extends ApiTypes> extends AugmentedErrors<ApiType> {
    {{#unless isStrict}}
    [key: string]: QueryableModuleErrors<ApiType>;
    {{/unless}}
  }
}
